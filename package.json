{
  "scripts": {
    "build": "react-scripts build && cp client/build/index.html public/client.html && cp server/build/index.html public/server.html",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0"
    }
}
